<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#E0FBBF"
        android:orientation="vertical" >

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_gravity="center"
        android:src="@drawable/dietlogo1"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:orientation="horizontal"
        android:gravity="center">

        <androidx.cardview.widget.CardView
            android:id="@+id/cardView1"
            android:layout_width="190dp"
            android:layout_height="190dp"
            android:layout_gravity="center"
            android:layout_marginRight="10dp"
            app:cardBackgroundColor="#8BC34A"
            card_view:cardCornerRadius="10dp">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="170dp"
                android:layout_height="170dp"
                android:layout_gravity="center"
                android:src="@drawable/food"
                />

            <TextView
                android:id="@+id/TextFood"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="80dp"
                android:text="Food"
                android:textColor="#9C27B0"
                android:textSize="22sp" />

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cardView2"
            android:layout_width="190dp"
            android:layout_height="190dp"
            app:cardBackgroundColor="#8BC34A"
            card_view:cardCornerRadius="10dp">
            <ImageView
                android:id="@+id/imageExercise"
                android:layout_width="170dp"
                android:layout_height="170dp"
                android:layout_gravity="center"
                android:src="@drawable/exercise"
                />

            <TextView
                android:id="@+id/TextExercise"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Exercise"
                android:textColor="#9C27B0"
                android:layout_marginTop="80dp"
                android:textSize="22sp" />

        </androidx.cardview.widget.CardView>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:orientation="horizontal"
        android:gravity="center">

        <androidx.cardview.widget.CardView
            android:id="@+id/cardView3"
            android:layout_width="190dp"
            android:layout_height="190dp"
            app:cardBackgroundColor="#8BC34A"
            android:layout_gravity="center"
            android:layout_marginRight="10dp"
            card_view:cardCornerRadius="10dp">
            <ImageView
                android:id="@+id/imageWater"
                android:layout_width="170dp"
                android:layout_height="170dp"
                android:layout_gravity="center"
                android:src="@drawable/water"
                />
            <TextView
                android:id="@+id/TextWater"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Water"
                android:textColor="#9C27B0"
                android:layout_marginTop="80dp"
                android:textSize="22sp" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cardView4"
            android:layout_width="190dp"
            android:layout_height="190dp"
            app:cardBackgroundColor="#8BC34A"
            app:layout_constraintBottom_toBottomOf="parent"
            card_view:cardCornerRadius="10dp">
            <ImageView
                android:id="@+id/imageWeight"
                android:layout_width="170dp"
                android:layout_height="170dp"
                android:layout_gravity="center"
                android:src="@drawable/weight"
                />
            <TextView
                android:id="@+id/Weight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Weight"
                android:textColor="#9C27B0"
                android:layout_marginTop="80dp"
                android:textSize="22sp" />
        </androidx.cardview.widget.CardView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:orientation="horizontal"
        android:gravity="center">

        <androidx.cardview.widget.CardView
            android:id="@+id/cardView5"
            android:layout_width="190dp"
            android:layout_height="190dp"
            app:cardBackgroundColor="#8BC34A"
            android:layout_gravity="center"
            android:layout_marginRight="10dp"
            card_view:cardCornerRadius="10dp">
            <ImageView
                android:id="@+id/imagePlan"
                android:layout_width="170dp"
                android:layout_height="170dp"
                android:layout_gravity="center"
                android:src="@drawable/plan"
                />

            <TextView
                android:id="@+id/textPlan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="80dp"
                android:text="My plan"
                android:textColor="#9C27B0"
                android:textSize="22sp" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cardView6"
            android:layout_width="190dp"
            android:layout_height="190dp"
            app:cardBackgroundColor="#8BC34A"
            app:layout_constraintBottom_toBottomOf="parent"
            card_view:cardCornerRadius="10dp">
            <ImageView
                android:id="@+id/imageDiary"
                android:layout_width="170dp"
                android:layout_height="170dp"
                android:layout_gravity="center"
                android:src="@drawable/calendar"
                />

            <TextView
                android:id="@+id/textDiary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="80dp"
                android:text="Today"
                android:textColor="#9C27B0"
                android:textSize="22sp" />
        </androidx.cardview.widget.CardView>
    </LinearLayout>

</LinearLayout>
